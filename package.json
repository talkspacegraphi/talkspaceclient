{
  "name": "talkspace",
  "version": "1.0.1",
  "private": true,
  "main": "electron.js",
  "homepage": "./",
  "description": "TalkSpace Messenger",
  "author": "Graphi",
  "dependencies": {
    "axios": "^1.13.2",
    "electron-log": "^5.1.2",
    "electron-updater": "^6.1.8",
    "emoji-picker-react": "^4.9.2",
    "framer-motion": "^12.25.0",
    "lucide-react": "^0.562.0",
    "peerjs": "^1.5.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.22.3",
    "react-scripts": "5.0.1",
    "remark-gfm": "^4.0.0",
    "socket.io-client": "^4.7.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron-dev": "electron .",
    "dist": "react-scripts build && electron-builder"
  },
  "build": {
    "extends": null,
    "appId": "com.talkspace.app",
    "productName": "TalkSpace",
    "files": [
      "build/**/*",
      "electron.js"
    ],
    "extraResources": [
      {
        "from": "public/favicon.ico",
        "to": "favicon.ico"
      },
      {
        "from": "public/splash.html",
        "to": "splash.html"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TalkSpace"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "talkspacegraphi", 
        "repo": "ТВОЙ_REPO_NAME"
      }
    ],
    "asar": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}